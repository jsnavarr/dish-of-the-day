<%- include('../partials/header') %>
    <div class="allUDO">
        <div>New Dish</div>
    </div>      
    <div class="addNewDish">
        <form action="/dishes" method="POST">
            <div class="allDishes">
                <div class="dish-details">
                    <div>Picture:</div>
                    <input type="text" name="picture" required>
                    <div>Description:</div>
                    <input type="text" name="description" required>
                    <div>Type:</div>
                    <input type="text" name="type" required>
                    <div>Price:</div>
                    <input type="number" name="price"  required>
                    <div>Availability starts:</div>
                    <input type="datetime-local" name="availability_start" required>
                    <div>Availability ends:</div>
                    <input type="datetime-local" name="availability_end" required>
                    <div>Total Portions:</div>
                    <input type="number" name="totalPortions" required>
                    <div>Cooker ID:</div>
                    <input type="text" name="user_id" value="<%= user.email %>" disabled><br>
                    <input id="addDishButton" type="submit" value="Add Dish">
                </div>
            </div>
        </form>
    </div>
<%- include('../partials/footer') %>