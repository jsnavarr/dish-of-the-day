<%- include('../partials/header') %>
    <div class="allUDO">
        <div>Edit Dish</div>
    </div>        
    <div class="allDishes">
        <form action="/dishes/<%= dish._id %>" method="POST">
            <% if(dish.picture){ %>
                <img src="<%= dish.picture %>" height="150" width="150">
            <% } else { %>
                <img src="https://i.imgur.com/seGjXGn.jpg" height="150" width="150">
            <% } %>
            <div class="dish-details">
                <div>Picture:</div>
                <input type="text" name="picture" value="<%= dish.picture %>" required>
                <div>Description:</div>
                <input type="text" name="description" value="<%= dish.description %>" required>
                <div>Type:</div>
                <input type="text" name="type" value="<%= dish.type %>" required>
                <div>Price:</div>
                <input type="number" name="price" value="<%= dish.price %>" required>
                <div>Availability starts:</div>
                <input type="datetime-local" name="availability_start" value="<%= av_date_s %>" required>
                <div>Availability ends:</div>
                <input type="datetime-local" name="availability_end" value="<%= av_date_e %>" required>
                <div>Total Portions:</div>
                <input type="number" name="totalPortions" value="<%= dish.totalPortions %>" required>            
                <div>Cooker ID:</div>
                <input type="text" name="user_id" value="<%= dish.user_id %>" required><br>
                <input id="editDishButton" type="submit" value="Save Dish">
            </div>
        </form>
    </div>
<%- include('../partials/footer') %>