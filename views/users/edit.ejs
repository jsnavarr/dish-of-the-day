<%- include('../partials/header') %>
    <div class="allUDO">
        <div>Edit User</div>
    </div>       
    <div class="allUsers">
        <form action="/users/<%= user._id %>" method="POST">
            <div class = "user-details">
                <div>Role:</div>
                <select name="role">
                    <option value="CONSUMER" 
                    {% if user.role == "CONSUMER" %} 
                        selected 
                    {% endif %}>CONSUMER</option>
                    <option value="COOKER"
                    {% if user.role == "COOKER" %} 
                        selected 
                    {% endif %}>COOKER</option>
                </select>
                <div>Name:</div>
                <input type="text" name="name" value="<%= user.name %>" disabled>
                <div>e-mail:</div>
                <input type="mail" name="email" value="<%= user.email %>"disabled>
                <div>Address:</div>
                <div>Street:</div>
                <input type="text" name="street" value="<%= user.street %>"required>
                <div>Number:</div>
                <input type="text" name="number" value="<%= user.number %>"required>
                <div>Zip:</div>
                <input type="text" name="zip" value="<%= user.zip %>"required>
                <div>State:</div>
